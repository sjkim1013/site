<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.site.mappers.notice">

	<!-- 게시물 목록 -->
	<select id="list" resultType="com.site.domain.NoticeVO">
		select
			notice_id, title, content, writer, createdTime
		from tbl_notice
		order by notice_id desc
		limit 10
	</select>

</mapper>